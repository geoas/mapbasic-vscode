{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "${env:USERPROFILE}/.vscode/extensions/mapinfo.mapbasic-0.0.11/Helper/MapBasicHelper.exe",
      "args": ["build", "${fileDirname}"],
      "presentation": {
        "showReuseMessage": false,
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "mapbasic",
        "fileLocation": ["relative", "${fileDirname}"],
        "pattern": {
          "regexp": "^\\((.*):(\\d+)\\)\\s*(.*)$",
          "file": 1,
          "line": 2,
          "message": 3
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "${env:USERPROFILE}/.vscode/extensions/mapinfo.mapbasic-0.0.11/Helper/MapBasicHelper.exe",
      "args": ["run", "MapInfo.Application.x64", "${fileDirname}"],
      "presentation": {
        "showReuseMessage": false,
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "mapbasic",
        "fileLocation": ["relative", "${fileDirname}"],
        "pattern": {
          "regexp": "^\\((.*):(\\d+)\\)\\s*(.*)$",
          "file": 1,
          "line": 2,
          "message": 3
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
    ]
}